{% extends 'admin.html.twig' %}

{% block title %}Product{% endblock %}

{% block content %}
<div class="container-fluid px-4">
    <h1 class="mt-4">Show product</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="{{ url('app_product_index') }}">Product</a></li>
        <li class="breadcrumb-item active">Show</li>
    </ol>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Sale</th>
                <td>{{ product.sale }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary mt-3" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
</div>
{% endblock %}
