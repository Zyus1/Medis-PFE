{% extends 'grant.html.twig' %}

{% block title %}Category index{% endblock %}

{% block content %}
<div class="container-fluid px-4">
    <h1 class="mt-4">Categories list</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Category</li>
    </ol>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
                    <a class="btn btn-secondary" href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_category_new') }}">Create new</a>
</div>
{% endblock %}
